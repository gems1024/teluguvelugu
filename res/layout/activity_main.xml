<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ehclogobg"
    android:gravity="fill_horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".DictionaryActivity" >

    <TextView
        android:id="@+id/meaning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/wordoftheday"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/wordoftheday"
        android:layout_below="@+id/wordoftheday"
        android:layout_marginBottom="76dp"
        android:layout_marginTop="27dp"
        android:gravity="fill_horizontal"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1.5"
        android:textColor="@color/ehcgreen"
        android:textSize="30px"
        android:textStyle="normal"
        android:typeface="sans" />

    <AutoCompleteTextView
        android:id="@+id/searchView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/favourite"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="80dp"
        android:autoText="true"
        android:background="@color/sysGray"
        android:ems="10"
        android:imeOptions="actionSearch"
        android:inputType="text|textAutoComplete|textAutoCorrect"
        android:orientation="vertical"
        android:textAlignment="viewStart" />

    <TextView
        android:id="@+id/wordoftheday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/searchView1"
        android:layout_alignTop="@+id/searchView1"
        android:layout_marginTop="66dp"
        android:fontFamily="OpenSans"
        android:gravity="center"
        android:textColor="@color/ehcbody"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/favourite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/wordoftheday"
        android:layout_marginTop="72dp"
        android:scrollbars="vertical"
        android:src="@android:drawable/btn_star" />

</RelativeLayout>